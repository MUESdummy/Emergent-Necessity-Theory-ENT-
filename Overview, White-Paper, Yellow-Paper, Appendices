gh repo create ENT-MUES-roadmap --public --license MIT --description "Emergent Necessity Theory & MUES roadmap, white + yellow papers"
cd ENT-MUES-roadmap
cp /path/to/ENT_White_Yellow_Papers_v1.pdf docs/
echo "# ENT & MUES Roadmap" > README.md
git add README.md docs/ENT_White_Yellow_Papers_v1.pdf
git commit -m "Initial commit with white+yellow papers PDF"
git push -u origin main
gh api -X PUT \
  -H "Accept: application/vnd.github.v3+json" \
  /repos/${OWNER}/ENT-MUES-roadmap/wiki/Home \
  -f "content=$(cat <<'EOF'
## ENT & MUES Documentation Hub
*Full bundle PDF*: [[docs/ENT_White_Yellow_Papers_v1.pdf]]
*Roadmap*: see project board
EOF
)"
